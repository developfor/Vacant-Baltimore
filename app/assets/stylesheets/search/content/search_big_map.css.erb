@font-face {
	font-family: 'Droid Sans';
	font-weight: normal;
	src: url("<%= font_path 'DroidSans.ttf' %>"); 
}

@font-face {
	font-family: 'Droid Sans';
	font-weight: bold;
	src: url("<%= font_path 'DroidSans-Bold.ttf' %>"); 
}

html, body{
	font-family: 'Droid Sans', Arial, Helvetica, sans-serif;
	background-color: #EEE;

	color: #424242;
	-webkit-appearance: none;
	--moz-appearance: none;
}

.wrapper-outer{
 	display: table; 
 	position: absolute; 
 	height: 100%; 
 	width: 100%;
 }

.wrapper-middle{
 	display: table-cell; 
 	vertical-align: middle;
}

.wrapper{
	margin: 0 auto;
	width: 960px;
	height: 580px;
	-webkit-border-radius: 5px; 
	-moz-border-radius: 5px; 
	border-radius: 5px; 
	border: 2px solid #C9C9C9;
	position: relative;
	background-color: #FFF;
	margin-top: 20px;
}

.title{
margin-top: 0px;
background-color: #2E5879;
height: 50px;
color: white;
}

.wrapper-title{
width: 960px;
	height: 50px;
	margin: 0 auto;
}


.wrapper-title h1{
	float: left;
}

.subtitle{
margin-top: 5px;
}
.sub-subtitle{
margin-top: 2px;
}

#intro-text h5{
	font-size: 20px;
-webkit-border-radius: 5px;
-moz-border-radius: 5px;
border-radius: 5px;
border: 2px solid #C9C9C9;
padding: 6px;
text-align: center;
background-color: #2E5879;
color: #FFF;
}

.border{
	border: 1.5px solid #C9C9C9;
margin-top: 10px;
margin-bottom: 10px;
}
}

p{
 font-size: 12px ;
}

a{text-decoration: none;
	color: olive;
	font-size: 12px;
}

h1{
	text-align: center;
	font-size: 17px;
}

h2{
	text-align: center;
	font-size: 14px;
}

.title h1{
	font-weight: bold;
line-height: 50px;
font-size: 25px;
margin-left: 10px;
}

.sub-text {
	margin-left: 10px;
   	float: left;
	margin-top: 10px;
	width: 300px;
}
.sub-text h2 {
	text-align: left;
	font-size: 16px;
    line-height: 23px;
}
.details{
	font-size: 20px;
}

#footer{
	position: absolute;
	bottom: -30px;
	width: 100%;
	z-index: 1000;
}

#logo-area{
	position: absolute;
	right: 10px;
    bottom: 40px;
}

#logo{
	float: left;
	background: url("<%= asset_path 'logo.png' %>")no-repeat;
	background-size:91px auto;
	background-repeat:no-repeat;
	height: 19px;
	width: 90px;
	text-indent: -9999px; 
}

#info-area{
	position: absolute;
	left: 5px;
	bottom: 60px;

}

#info-button{
	cursor: pointer;
	float: left;
	fill: #2E5879;
	/*background: url("../images/info-button.png")no-repeat scroll transparent;*/
	background-size:70px auto;
	height: 30px;
	width: 30px;
	text-indent: -9999px;
	position: absolute;
	top: -4px;
	left: 5px;
}

#info-button:hover circle{
	fill:#FBB03B;
}


#info-close, #embed-close{
	cursor: pointer;
	background-color: #2E5879;
	height: 30px;
	text-align: center;
	margin: 15px;
	line-height: 30px;
	border-style: solid;
	border-width: 2px;
	border-radius: 5px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
}

#info-close:hover, #embed-close:hover{
	background: #FBB03B;
}

#info {
	position:absolute;
	bottom: 70px;
	width: 100%;
	
	overflow: hidden;
}


.location-pic{
border-radius: 5px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	overflow: hidden;
	width: 300px;
	height: 220px;
	border: 2px solid #C9C9C9;
}

.scroll-text{
	height: 380px;
	width: 255px;
}
.content-text {
	padding-right: 14px;
}

#info p{
	margin-top: 6px;
	font-size: 12px;
	line-height: 1.4em;
}
#info-dropdown{
	height: 430px;
	display:none;
	background-color: #666;
	color:white;
	padding-top: 2px;
	padding-left: 14px;
	padding-right: 14px;
	padding-bottom: 15px;
}

#info-text p:last-child, #embed-text p:last-child{
	padding-bottom: 6px;
}

#embed-text{
	display: none;
}
#embed-button{
	z-index: 1000;
	position: absolute;
	left: 45px;
	bottom: 40px;
	cursor: pointer;
	outline: none;
	background-color: #2E5879;
	border: none;
	font-size: 12px;
	color: white;
	font-style: normal;
	font-family: 'Droid Sans', Arial, Helvetica, sans-serif;
	height:20px;
	text-align: center;
	line-height: 20px;
	width:80px;
	text-decoration: none;
	border-radius: 5px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;

}

#embed-button:hover{
	background-color: #ffac4d;
}

.embed-code{
	background-color: #F1F1F1;
	font-size: 11px;
	margin-top: 5px;
	padding: 5px;
	color: #000;
}

#source{
	margin-top: 8px;
	font-size: 11px;
}

#source a{
	margin-left: 4px;
	font-size: 12px;
	text-decoration: none;
	color: white;
}

#source a:hover{
	margin-left: 4px;
	font-size: 12px;
	text-decoration: none;
	color: #FBB03B;
}

.title-header h1{
	font-size: 30px;
	color: white;
	line-height: 50px;
}

.buttons-box{
	width:100%;
	margin:0px auto;
	text-align:center;
	margin-top: 10px;
	margin-bottom: 10px;
	display: block;
}

.button{
	cursor: pointer;
	outline: none; 
	background-color:#EBEBEB;
	text-indent:0px;
	border:1px solid #C7C7C7;
	color:#000000;
	font-size:12px;
	font-weight:normal;
	font-style:normal;
	height:20px;
	line-height:10px;
	width:80px;
	text-decoration:none;
	-webkit-border-radius: 5px; 
	-moz-border-radius: 5px; 
	border-radius: 5px; 
}
.button:hover {
	background-color:#2E5879;
	color: white;
}

.button-select{
	background-color:#2E5879;
	color: white;
}

.nicescroll{
	overflow: hidden;
}






#map{
	width: 620px;
	/*height: 480px;*/
